        </Border>
        
            <Rectangle Grid.Row="0" Margin="10, 10, 10, 00" RadiusX="20" RadiusY="20">
                <Rectangle.Fill>
						<LinearGradientBrush StartPoint="0.480423,0.00158004" EndPoint="0.480423,1.00158">
							<LinearGradientBrush.GradientStops>
								<GradientStop Color="#00252C76" Offset="0"/>
								<GradientStop Color="#008F92B7" Offset="0.352751"/>
								<GradientStop Color="#00F9F9F9" Offset="1"/>
