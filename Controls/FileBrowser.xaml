<UserControl x:Class="LapX.FileBrowser"  Name="fileBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinWidth="100" MinHeight="23">
    
    <Grid>
            <!-- Textbox,   Browse ... -->
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,0,0" Name="BrowseButton"
                VerticalAlignment="Top" Width="75"
                Click="BrowseButtonClick">Browse ...</Button>
        <TextBox Name="FileNameTextBox" Margin="0,0,86,0" Height="23" VerticalAlignment="Top"
               Text="{Binding Path=FileName, ElementName=fileBrowser, Mode=TwoWay}" />
    </Grid>
</UserControl>
